{% extends "templates/info-header.html.twig" %}
{% block content %}

     <!-- this is the title section -- this can include a header image
	 if this section isn't big enough, add a div with the "section" class -->
    
    
    
    <!-- end of title section -->

    <!-- this is the main page content -->
    <div class="main-content">
      
      <div class="container">
        <section class="hero is-light mt-6">
            <div class="hero-body">
                <div class="columns has-background-primary-light">
                    <article class="columns featured">
                        <div class="column is-one-quarter post-img ">
                            <img src={{ SingleBlog.Image.url }} alt="">
                        </div>
                        <div class="column is-5 featured-content va">
                            <div>
                            
                                <h1 class="title is-1">{{ SingleBlog.Title }}</h1>
                            
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </section>
        <div class="columns is-multiline is-centered">	  
            <!-- posts (image length should be 400; height can be whatever) -->
            <div class="column is-8">
                    
                <div class="content-wrapper mt-6">
                    {% for content in SingleBlog.Content %}
                        <p>{{ content.Html }}</p><br/>
                    {% endfor %}
                </div>
                <div class="end-post-details">
                    <div class="is-pulled-left">
                        <i>{{ SingleBlog.DateCreated }} by <a>{{ SingleBlog.Author.Name }}</a></i>
                    </div>
                    <div class="is-pulled-right">
                        <a>#{{ SingleBlog.Label }}</a>
                    </div>
                </div>
                <hr/>
                <div class="author-content">
                    <article class="media">
                        <div class="media-left">
                            <figure class="image is-64x64">
                                <img src={{ SingleBlog.Author.Image.url }} alt="Image">
                            </figure>
                        </div>
                        <div class="media-content">
                            <div class="content">
                                <strong>{{ SingleBlog.Author.Name }}</strong>
                                <p>{{ SingleBlog.Author.Description }}</p>
                            </div>
                        </div>
                    </article>
                </div>
                <hr/>
            </div>
            <!-- post should end here --> 

            <!-- end of post column -->
        </div>
      </div>
    </div>
    <!-- end of main page content -->
{% endblock %}